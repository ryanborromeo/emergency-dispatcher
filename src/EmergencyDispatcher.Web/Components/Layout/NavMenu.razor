@using Microsoft.AspNetCore.Components.Authorization

<MudDrawerHeader>
    <MudIcon Icon="@Icons.Material.Filled.Emergency" Size="Size.Large" Color="Color.Error" Class="mr-2" />
    <MudText Typo="Typo.h6">Dispatch</MudText>
</MudDrawerHeader>

<MudDivider />

<MudNavMenu Bordered="true" Color="Color.Primary">
    <MudNavLink Href="/dashboard"
                Icon="@Icons.Material.Filled.Dashboard"
                Match="NavLinkMatch.Prefix">
        Dashboard
    </MudNavLink>

    <MudNavLink Href="/cases/new"
                Icon="@Icons.Material.Filled.AddCircle"
                Match="NavLinkMatch.All">
        New Case
    </MudNavLink>

    <MudNavLink Href="/members"
                Icon="@Icons.Material.Filled.People"
                Match="NavLinkMatch.Prefix">
        Members
    </MudNavLink>

    <MudNavLink Href="/hospitals"
                Icon="@Icons.Material.Filled.LocalHospital"
                Match="NavLinkMatch.Prefix">
        Hospitals
    </MudNavLink>

    <AuthorizeView Roles="Admin">
        <Authorized>
            <MudDivider Class="my-2" />
            <MudNavLink Href="/audit-logs"
                        Icon="@Icons.Material.Filled.History"
                        Match="NavLinkMatch.All">
                Audit Logs
            </MudNavLink>
        </Authorized>
    </AuthorizeView>
</MudNavMenu>
